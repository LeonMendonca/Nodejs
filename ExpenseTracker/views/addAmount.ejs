<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('./bootstrap/link-bootstrap') -%>
  <%- include ('./bootstrap/script-bootstrap') -%>
  <%- include ('./nav') -%>
  <link href="/css/hide-arrows.css" rel="stylesheet"></link>
</head>
  <body>
    <div class="container mt-5">
      <div class="container mt-5">
      <% if(locals.warning) { %>
        <div class="alert alert-warning" role="alert">
          <%= locals.warning %>
        </div>
      <% } %>

      <form class="row g-3" method="POST">
        <label for="inamt" class="form-label">Add todays amount</label>
        <input type="number" class="form-control" id="inamt" name="inputAmount" >

        <select id="curr" class="form-select" name="currency">
          <option selected></option>
          <%- include ('./curr-options') -%>
        </select>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
